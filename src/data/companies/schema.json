{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Company",
  "description": "Schema for company contact information",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "logoType": {
      "type": "string",
      "minLength": 1
    },
    "logo": {
      "type": "string"
    },
    "website": {
      "type": "string",
      "format": "uri"
    },
    "docs": {
      "type": "string",
      "format": "uri"
    },
    "github": {
      "type": "string",
      "format": "uri"
    },
    "discord": {
      "type": "string",
      "format": "uri"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "contacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "product": {
                  "type": "string",
                  "minLength": 1
                },
                "handles": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^@[a-zA-Z0-9_]+$"
                  },
                  "minItems": 1
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "discord": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": ["product", "handles"]
            },
            "minItems": 1
          }
        },
        "required": ["name", "contacts"]
      },
      "minItems": 1
    }
  },
  "required": ["id", "name", "description", "logoType", "categories"]
}
